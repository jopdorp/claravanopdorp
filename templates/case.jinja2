<div class="row" height="100px">
  <div class="col">
    <h1 style="margin-bottom: 25px">
      {{ view.case.title }}
      <a href="{{ view.case.github_url }}" target="_blank" class="github-link"><i
          class="fa-brands center fa-github"></i></a>
    </h1>
    {% for item in view.work_sections %}
      {% if item.reference %}
        <h5 style="margin-bottom: 30px; color:gray">{{ item.reference }}</h5>
        <br/>
      {% endif %}
      {% if item.photo %}
        {% if item.url %}
          <a href="{{ view.item.url }}" target="_blank">
            <img src="/media/{{ item.photo }}" alt="" style="margin-bottom: 25px"/>
          </a>
        {% else %}
          <img src="/media/{{ item.photo }}" alt="" style="margin-bottom: 25px"/>
        {% endif %}

      {% endif %}
      {% if item.feet %}
        <h6 style="margin-bottom: 40px; text-align: center; font-size: 15px; color:grey;">{{ item.feet }}</h6>
        <br/>
      {% endif %}
      <div style="margin-bottom: 50px" class="case-html-content">{{ item.content.html|safe }}</div>
    {% endfor %}
    {% include "tech_icons.jinja2" %}


      <div class="gocase" style="margin-top: 70px; padding: 5px; justify-items: center;">
        <div class="container d-flex justify-content-center " style="display: flex;
  flex-wrap: wrap;">
          <div class="row" style="margin: 5px">
              {% if view.prev_case %}
                <h4 style="text-align: right; font-size: 14px;"> PREV
                  <a class="box" href="/work/{{ view.prev_case.title }}"><div style="margin-bottom: 25px; font-size: 20px;"><i class="bi bi-chevron-double-left"></i> {{ view.prev_case.title }}
                  </div></a>
                </h4>
              {% endif %}
            </div>
          <div class="row" style="margin: 5px" >
              {% if view.next_case %}
                <h4 style="text-align: left; font-size: 14px;" > NEXT
                  <a href="/work/{{ view.next_case.title }}"><div style="margin-bottom: 25px; font-size: 20px;">{{ view.next_case.title }} <i class="bi bi-chevron-double-right"></i>
                  </div></a>
                </h4>
              {% endif %}
            </div>
        </div>

      </div>
  </div>
</div>
