{% for work in view.works %}
  {% load static %}
  <div class="flex-work container" data-color="{{ work.color }}">
    <div class="row">
      <h4 class="work col-8" id="work-{{ work.title }}">{{ work.title }}</h4>
        <div class="work col row" style="--bs-gutter-x: 0.6rem">
          <div>
            <a href="{{ work.url }}" target="_blank" class="external-link"><i class="bi bi-box-arrow-up-right"></i></a>
          </div>
          <div class="launch-text">
            <a href="{{ work.url }}" target="_blank" class="external-link">Website</a>
          </div>
        </div>
        <div class="work col row" style="--bs-gutter-x: 0.6rem">
          <div>
            <a href="/work/{{ work.title }}" class="external-link"><i class="bi bi-box"></i></a>
          </div>
          <div class="launch-text">
            <a href="/work/{{ work.title }}" class="external-link">Details</a>
          </div>
        </div>
     
     <h6>{{ work.description }}</h6>
     <h6 style="display: inline-block">{{ work.content }}</h6>
     </div> 
     <div class="row">
        <div class="col">
          <div class="xwork">
            <video class="work-video" width="100%" src="/media/{{ work.video }}" autoplay muted loop></video>
          </div>
        </div>
    </div>
  </div>
{% endfor %}

