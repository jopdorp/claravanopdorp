{% for work in view.works %}
  {% load static %}

  <div class="flex-work" style="display:flex; position: relative">
  <div class="row">
  <h4 class="work" id="work-{{ work.title }}" style="display: inline-block" >{{ work.title }}. </h4>
  <a href="{{ work.url }}" target="_blank" class="external-link"><i class="bi bi-box-arrow-up-right"></i></a>
  <h6>{{ work.description }}</h6>
  <h6 id="work-{{ work.content }}" style="display: inline-block">{{ work.content }}</h6>
  <div class="row" id="xwork">
    <div class="col">
      <a href="/work/{{ work.title }}"><video class="work-video" width="100%" src="/media/{{ work.video}}" autoplay muted></video></a>
    </div>
  </div>
  </div>
  </div>
{% endfor %}

